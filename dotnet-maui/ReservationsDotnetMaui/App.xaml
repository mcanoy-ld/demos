<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HelloDotnetMaui"
             xmlns:converters="clr-namespace:ReservationsDotnetMaui.Converters"
             x:Class="ReservationsDotnetMaui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:AvailabilityConverter x:Key="AvailabilityConverter" />
            <converters:AvailabilityColorConverter x:Key="AvailabilityColorConverter" />
            <converters:ReserveButtonConverter x:Key="ReserveButtonConverter" />
            <converters:InvertBoolConverter x:Key="InvertBoolConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
