<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ReservationsDotnetMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ReservationsDotnetMaui"
    Shell.FlyoutBehavior="Flyout"
    Title="ReservationsDotnetMaui">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Reserve Desk"
        ContentTemplate="{DataTemplate local:ReservationPage}"
        Route="ReservationPage" />

</Shell>
