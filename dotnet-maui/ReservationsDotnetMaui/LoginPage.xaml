<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReservationsDotnetMaui.LoginPage"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout 
            Spacing="30" 
            Padding="40,60,40,40" 
            VerticalOptions="Center">

            <!-- Header -->
            <VerticalStackLayout Spacing="10">
                <Label 
                    Text="ðŸš© LaunchDarkly"
                    FontSize="32"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    TextColor="{StaticResource Primary}" />
                
                <Label 
                    Text="Select a user to continue"
                    FontSize="18"
                    HorizontalOptions="Center"
                    TextColor="{StaticResource Gray600}" />
            </VerticalStackLayout>

            <!-- User Selection Card -->
            <Frame 
                Padding="30"
                CornerRadius="16"
                HasShadow="True"
                BackgroundColor="{StaticResource White}"
                BorderColor="{StaticResource Gray200}"
                Margin="0,20">
                <VerticalStackLayout Spacing="20">
                    
                    <Label 
                        Text="Select User"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="{StaticResource Gray900}"
                        Margin="0,0,0,10" />

                    <Picker 
                        x:Name="UserPicker"
                        Title="Choose a user..."
                        HeightRequest="50"
                        FontSize="16"
                        BackgroundColor="{StaticResource Gray100}"
                        TextColor="{StaticResource Gray900}" />

                    <Button 
                        x:Name="LoginButton"
                        Text="Login"
                        Clicked="OnLoginClicked"
                        HeightRequest="50"
                        Margin="0,10,0,0"
                        IsEnabled="False" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
